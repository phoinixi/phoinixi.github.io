---
import Layout from "../../layouts/Layout.astro";
import { formatDate } from "../../utils/date";
import { getCollection, type CollectionEntry } from "astro:content";
import Card from "../../components/ui/Card.astro";
import Tag from "../../components/ui/Tag.astro";
import PageLayout from "../../components/layout/PageLayout.astro";

// Get all blog posts from the collection
const posts = await getCollection("blog");

// Sort by publication date (newest first)
posts.sort(
  (a: CollectionEntry<"blog">, b: CollectionEntry<"blog">) =>
    b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Get unique tags across all posts
const allTags = [
  ...new Set(posts.flatMap((post: CollectionEntry<"blog">) => post.data.tags)),
].sort();

type BlogPost = CollectionEntry<"blog">;
const typedPosts: BlogPost[] = posts;
---

<Layout title="Blog | Francesco Esposito">
  <PageLayout
    title="Blog"
    description="My thoughts and tutorials on web development, frontend technologies, and software engineering."
  >
    <div class="grid grid-cols-1 gap-8 md:grid-cols-[3fr_1fr]">
      <div class="flex flex-col gap-8">
        {
          typedPosts.map((post) => (
            <Card url={`/blog/${post.slug}`}>
              <h2 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">
                {post.data.title}
              </h2>
              <div class="mb-2 text-sm text-gray-500 dark:text-gray-400">
                {formatDate(post.data.pubDate)}
              </div>
              <p class="mb-4 text-gray-600 dark:text-gray-300">
                {post.data.description}
              </p>
              <div class="flex flex-wrap gap-2">
                {post.data.tags.map((tag: string) => (
                  <Tag text={tag} />
                ))}
              </div>
            </Card>
          ))
        }
      </div>

      {
        allTags.length > 0 && (
          <aside class="sticky top-8 self-start p-6 bg-white rounded-lg border border-gray-100 dark:border-gray-800 dark:bg-gray-900">
            <h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">
              Topics
            </h2>
            <div class="flex flex-col gap-2">
              {allTags.map((tag) => (
                <span class="block px-2 py-1 text-gray-700 rounded dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800">
                  #{tag}
                </span>
              ))}
            </div>
          </aside>
        )
      }
    </div>
  </PageLayout>
</Layout>
