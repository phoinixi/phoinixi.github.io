---
import Layout from "./Layout.astro";
import { formatDate } from "../utils/date";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate: string | Date;
    updatedDate?: string | Date;
    heroImage?: string;
    tags?: string[];
  };
}

const { content } = Astro.props;
const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  tags = [],
} = content;
---

<Layout title={title} description={description}>
  <div class="container px-4 mx-auto">
    <article class="mx-auto max-w-3xl">
      <header class="mb-10">
        <div class="mb-2 text-gray-500">
          {formatDate(pubDate)}
          {
            updatedDate && (
              <span class="ml-2">(Updated: {formatDate(updatedDate)})</span>
            )
          }
        </div>
        <h1 class="mb-4 text-4xl font-bold text-gray-900">{title}</h1>
        {
          heroImage && (
            <img
              src={heroImage}
              alt={title}
              class="mb-6 w-full h-auto rounded-lg"
            />
          )
        }
        <p class="text-xl text-gray-600">{description}</p>

        {
          tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mt-4">
              {tags.map((tag) => (
                <a
                  href={`/blog/tag/${tag}`}
                  class="px-3 py-1 text-sm text-gray-800 bg-gray-100 rounded-full transition-colors hover:bg-gray-200"
                >
                  #{tag}
                </a>
              ))}
            </div>
          )
        }
      </header>

      <div class="max-w-none prose prose-lg">
        <slot />
      </div>
    </article>
  </div>
</Layout>
