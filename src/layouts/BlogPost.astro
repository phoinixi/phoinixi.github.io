---
import Layout from "./Layout.astro";
import { formatDate } from "../utils/date";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate: string | Date;
    updatedDate?: string | Date;
    heroImage?: string;
    tags?: string[];
  };
}

const { content } = Astro.props;
const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  tags = [],
} = content;
---

<Layout title={title} description={description} ogImage={heroImage}>
  <div class="container mx-auto px-4">
    <article class="max-w-3xl mx-auto">
      <header class="mb-10">
        <div class="text-gray-500 mb-2">
          {formatDate(pubDate)}
          {
            updatedDate && (
              <span class="ml-2">(Updated: {formatDate(updatedDate)})</span>
            )
          }
        </div>
        <h1 class="text-4xl font-bold text-gray-900 mb-4">{title}</h1>
        {
          heroImage && (
            <img
              src={heroImage}
              alt={title}
              class="w-full h-auto rounded-lg mb-6"
            />
          )
        }
        <p class="text-xl text-gray-600">{description}</p>

        {
          tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mt-4">
              {tags.map((tag) => (
                <a
                  href={`/blog/tag/${tag}`}
                  class="bg-gray-100 hover:bg-gray-200 text-gray-800 px-3 py-1 rounded-full text-sm transition-colors"
                >
                  #{tag}
                </a>
              ))}
            </div>
          )
        }
      </header>

      <div class="prose prose-lg max-w-none">
        <slot />
      </div>
    </article>
  </div>
</Layout>
