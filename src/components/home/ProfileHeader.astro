---
import { getEntry } from "astro:content";

// Get the hero content from MDX
const heroContent = await getEntry("pages", "home-hero");
const { Content } = await heroContent.render();
---

<div class="mx-auto mb-16 max-w-4xl">
  <div class="flex flex-col gap-10 items-center md:flex-row">
    <div class="md:w-2/3">
      <div class="prose dark:prose-invert">
        <Content />
      </div>
    </div>
    <div class="md:w-1/3">
      <img
        src="https://github.com/phoinixi.png"
        alt="Francesco Esposito"
        class="object-cover mx-auto w-48 h-48 rounded-full md:w-64 md:h-64 dark:bg-gray-800"
      />
    </div>
  </div>
</div>
