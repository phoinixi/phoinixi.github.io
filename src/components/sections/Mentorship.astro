---
const services = [
  {
    title: "Resume Review",
    description:
      "Get detailed feedback on your resume to make it stand out to recruiters and hiring managers.",
    duration: "30 minutes",
    icon: "document-text",
  },
  {
    title: "Interview Preparation",
    description:
      "Mock interviews and personalized feedback to help you ace your next technical interview.",
    duration: "60 minutes",
    icon: "user-group",
  },
  {
    title: "Career Guidance",
    description:
      "Advice on career progression, salary negotiation, and professional development.",
    duration: "45 minutes",
    icon: "chart-bar",
  },
  {
    title: "Pair Programming",
    description:
      "Collaborative coding sessions to help you solve complex problems and learn best practices.",
    duration: "60 minutes",
    icon: "code",
  },
];
---

<section
  id="mentorship"
  class="py-20 bg-gradient-to-br from-blue-50 to-gray-50"
>
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4 text-center">
        Mentorship
      </h2>
      <p class="text-gray-600 text-center mb-12 max-w-3xl mx-auto">
        I'm passionate about helping others grow in their tech careers. Whether
        you're just starting out or looking to level up, I offer personalized
        mentorship to help you achieve your goals.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {
          services.map((service) => (
            <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
              <div class="flex items-start gap-4">
                <div class="bg-blue-100 p-3 rounded-lg">
                  {service.icon === "document-text" && (
                    <svg
                      class="w-6 h-6 text-blue-600"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                      />
                    </svg>
                  )}
                  {service.icon === "user-group" && (
                    <svg
                      class="w-6 h-6 text-blue-600"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                      />
                    </svg>
                  )}
                  {service.icon === "chart-bar" && (
                    <svg
                      class="w-6 h-6 text-blue-600"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                      />
                    </svg>
                  )}
                  {service.icon === "code" && (
                    <svg
                      class="w-6 h-6 text-blue-600"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
                      />
                    </svg>
                  )}
                </div>

                <div>
                  <h3 class="text-xl font-semibold text-gray-800 mb-2">
                    {service.title}
                  </h3>
                  <p class="text-gray-600 mb-3">{service.description}</p>
                  <p class="text-sm text-gray-500">
                    Duration: {service.duration}
                  </p>
                </div>
              </div>
            </div>
          ))
        }
      </div>

      <div class="text-center mt-12">
        <a
          href="https://mentorcruise.com/mentor/francescoesposito/"
          target="_blank"
          rel="noopener noreferrer"
          class="px-8 py-3 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 transition-colors inline-flex items-center gap-2"
        >
          Book a session
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

