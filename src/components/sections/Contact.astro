---
const contactMethods = [
  {
    title: "Email",
    value: "contact@francescoesposito.dev",
    href: "mailto:contact@francescoesposito.dev",
    icon: "mail",
  },
  {
    title: "LinkedIn",
    value: "linkedin.com/in/francescoes",
    href: "https://www.linkedin.com/in/francescoes/",
    icon: "linkedin",
  },
  {
    title: "GitHub",
    value: "github.com/phoinixi",
    href: "https://github.com/phoinixi",
    icon: "github",
  },
  {
    title: "MentorCruise",
    value: "mentorcruise.com/mentor/francescoesposito",
    href: "https://mentorcruise.com/mentor/francescoesposito/",
    icon: "message-circle",
  },
];
---

<section id="contact" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4 text-center">
        Get in Touch
      </h2>
      <p class="text-gray-600 text-center mb-12 max-w-3xl mx-auto">
        Have a question or want to work together? Feel free to reach out to me
        through any of the channels below.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {
          contactMethods.map((method) => (
            <a
              href={method.href}
              target={method.title !== "Email" ? "_blank" : undefined}
              rel={method.title !== "Email" ? "noopener noreferrer" : undefined}
              class="flex items-center p-6 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors"
            >
              <div class="bg-blue-100 p-3 rounded-lg mr-4">
                {method.icon === "mail" && (
                  <svg
                    class="w-6 h-6 text-blue-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    />
                  </svg>
                )}
                {method.icon === "linkedin" && (
                  <svg
                    class="w-6 h-6 text-blue-600"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path d="M16 8C17.5913 8 19.1174 8.63214 20.2426 9.75736C21.3679 10.8826 22 12.4087 22 14V20H18V14C18 13.4696 17.7893 12.9609 17.4142 12.5858C17.0391 12.2107 16.5304 12 16 12C15.4696 12 14.9609 12.2107 14.5858 12.5858C14.2107 12.9609 14 13.4696 14 14V20H10V14C10 12.4087 10.6321 10.8826 11.7574 9.75736C12.8826 8.63214 14.4087 8 16 8ZM2 6H6V20H2V6Z" />
                  </svg>
                )}
                {method.icon === "github" && (
                  <svg
                    class="w-6 h-6 text-blue-600"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path d="M12 2C6.477 2 2 6.484 2 12.017C2 16.5 4.865 20.317 8.84 21.6C9.34 21.7 9.5 21.4 9.5 21.133V19.234C6.67 19.867 6.15 17.967 6.15 17.967C5.75 16.834 5.2 16.534 5.2 16.534C4.47 15.867 5.27 15.884 5.27 15.884C6.09 15.95 6.56 16.95 6.56 16.95C7.33 18.534 8.77 18 9.54 17.75C9.63 17.1 9.89 16.667 10.17 16.417C7.95 16.167 5.62 15.267 5.62 11.334C5.62 10.233 6 9.334 6.58 8.65C6.47 8.4 6.12 7.35 6.68 5.867C6.68 5.867 7.39 5.6 9.5 6.967C10.29 6.75 11.15 6.65 12 6.65C12.85 6.65 13.71 6.75 14.5 6.967C16.61 5.6 17.32 5.867 17.32 5.867C17.88 7.35 17.53 8.4 17.42 8.65C18 9.334 18.38 10.233 18.38 11.334C18.38 15.267 16.04 16.167 13.82 16.417C14.17 16.734 14.5 17.367 14.5 18.334V21.133C14.5 21.4 14.66 21.7 15.17 21.6C19.135 20.317 22 16.5 22 12.017C22 6.484 17.523 2 12 2Z" />
                  </svg>
                )}
                {method.icon === "message-circle" && (
                  <svg
                    class="w-6 h-6 text-blue-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                    />
                  </svg>
                )}
              </div>
              <div>
                <h3 class="font-medium text-gray-900 text-lg">
                  {method.title}
                </h3>
                <p class="text-gray-600">{method.value}</p>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</section>

