---
const skillCategories = [
  {
    title: "Frontend",
    skills: [
      "TypeScript",
      "React",
      "Redux",
      "Angular",
      "Vue.js",
      "HTML",
      "CSS",
      "Sass",
    ],
  },
  {
    title: "Tooling",
    skills: ["Webpack", "Vite", "Nx", "Git", "Docker"],
  },
  {
    title: "Backend",
    skills: ["Node.js", "Express", "C#"],
  },
];
---

<section id="skills" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold text-center text-gray-800 mb-10">Skills</h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {
          skillCategories.map((category) => (
            <div class="bg-white p-6 rounded-lg shadow-sm">
              <h3 class="text-xl font-semibold text-gray-800 mb-4 border-b border-gray-100 pb-2">
                {category.title}
              </h3>
              <ul class="space-y-2">
                {category.skills.map((skill) => (
                  <li class="flex items-center gap-2">
                    <span class="w-2 h-2 bg-blue-600 rounded-full" />
                    <span class="text-gray-700">{skill}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
