---
const navItems = [
  { href: "#about", label: "About" },
  { href: "#experience", label: "Experience" },
  { href: "#skills", label: "Skills" },
  { href: "#mentorship", label: "Mentorship" },
  { href: "#contact", label: "Contact" },
];
---

<header
  class="fixed top-0 left-0 right-0 z-50 py-4 bg-white/90 backdrop-blur-sm shadow-sm"
>
  <div class="container mx-auto px-4 flex justify-between items-center">
    <a
      href="/"
      class="text-2xl font-bold text-gray-800 hover:text-blue-600 transition-colors"
    >
      Francesco Esposito
    </a>

    <nav class="hidden md:block">
      <ul class="flex gap-6">
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-gray-600 hover:text-blue-600 font-medium transition-colors"
              >
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>

    <button
      id="mobile-menu-button"
      class="md:hidden p-2 rounded-md text-gray-600 hover:text-blue-600 hover:bg-gray-100"
    >
      Menu
    </button>
  </div>

  <!-- Mobile menu, hidden by default -->
  <div
    id="mobile-menu"
    class="hidden md:hidden bg-white border-t border-gray-100 px-4 py-2"
  >
    <ul class="flex flex-col gap-2">
      {
        navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="block py-2 text-gray-600 hover:text-blue-600 hover:bg-gray-50 rounded px-2 font-medium transition-colors"
            >
              {item.label}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</header>

<script>
  // Handle mobile menu toggle
  document.addEventListener("DOMContentLoaded", () => {
    const menuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    if (menuButton && mobileMenu) {
      menuButton.addEventListener("click", () => {
        mobileMenu.classList.toggle("hidden");
      });
    }
  });
</script>
