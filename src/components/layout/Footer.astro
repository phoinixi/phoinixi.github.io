---
import { SITE_TITLE } from "../../consts";
import SocialLinks from "../ui/SocialLinks.astro";
import { getEntry } from "astro:content";

interface Props {
  hideSidebarContent?: boolean;
}

// Get footer content from content collection
const footerContent = await getEntry("pages", "footer");
const { Content } = await footerContent.render();

const { hideSidebarContent = false } = Astro.props;
const year = new Date().getFullYear();
---

<footer class="py-8 mt-auto border-t border-gray-200 dark:border-gray-800">
  <div class="container px-6 mx-auto max-w-4xl">
    <div class="flex flex-col items-center text-center">
      <SocialLinks variant="icons" size="sm" className="mb-4" />

      <div
        class="prose prose-sm dark:prose-invert text-gray-600 dark:text-gray-400"
      >
        <Content />
      </div>
    </div>
  </div>
</footer>
